# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/admin_notes_ai

# AI Provider Configuration
AI_PROVIDER=claude  # Options: claude, openai
AI_MODEL=claude-3-5-sonnet-20241022  # Will use provider default if not specified
AI_BASE_URL=  # Optional: custom base URL for AI provider
AI_TIMEOUT=30000  # Request timeout in milliseconds
AI_MAX_RETRIES=3  # Maximum retry attempts

# AI Provider API Keys (set the one you're using)
CLAUDE_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Logging
LOG_LEVEL=info